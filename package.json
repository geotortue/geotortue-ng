{
  "name": "poc-geo-tortue-web-app",
  "version": "0.0.1",
  "description": "POC - A Simple GÃ©oTortue Web Application with TS, ES module, Antlr4, mathjs, three.js, i18next, CodeMirror, ...",
  "main": "./dist/index.js",
  "scripts": {
    "prepare": "husky",
    "start:dev": "vite",
    "watch:dev": "vite",
    "start": "npm run start:dev",
    "start:open": "concurrently \"npm start\" \"wait-on http://localhost:3000 && open-cli http://localhost:3000\"",
    "build": "rimraf dist && tsc && vite build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "fix:grammar": "tsx scripts/fix-generated.ts src/infrastructure/antlr/generated ParseTreeListener,TokenSource,TokenFactory",
    "generate:highlight": "tsx scripts/generate-syntax-from-atn.ts 'src/infrastructure/antlr/generated'",
    "build:grammar": "antlr-ng -Dlanguage=TypeScript -o src/infrastructure/antlr/generated -l true -v true src/infrastructure/antlr/grammar/GeoTortueLexer.g4 src/infrastructure/antlr/grammar/GeoTortueParser.g4",
    "postbuild:grammar": "npm run fix:grammar && npm run generate:highlight",
    "tsg": "tsg",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run -c vitest.unit.config.ts",
    "test:integration": "vitest run integration.test",
    "test:ui": "vitest --ui",
    "audit:licenses": "tsx scripts/audit-licenses.ts --summary",
    "coverage": "vitest run --coverage",
    "analyse:code": "tsg -d ./src --exclude test stories node_modules generated",
    "analyse:code:deps": "npm run analyse:code -- --stdout deps",
    "analyse:code:deps:out": "npm run analyse:code:deps | npx tsx ./scripts/keep-only-mermaid.ts",
    "analyse:code:deps:svg": "npm run analyse:code:deps | npx tsx ./scripts/keep-only-mermaid.ts | mmdc -c ./mermaid-config.json -p ./puppeteer-config.json -i - -o typescript-graph.svg",
    "analyse:code:deps:pdf": "npm run analyse:code:deps | npx tsx ./scripts/keep-only-mermaid.ts | mmdc -c ./mermaid-config.json -p ./puppeteer-config.json --outputFormat=pdf --pdfFit -i - -o typescript-graph.pdf",
    "analyse:bundle": "vite-bundle-visualizer"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/node": "^25.0.6",
    "@vitest/coverage-v8": "^4.0.18",
    "@ysk8hori/typescript-graph": "^0.26.5",
    "antlr-ng": "^1.0.10",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.4.0",
    "husky": "^9.1.7",
    "json": "^11.0.0",
    "license-checker-rseidelsohn": "^4.4.2",
    "lint-staged": "^16.2.7",
    "open-cli": "^8.0.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "terser": "^5.46.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-static-copy": "^3.1.4",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.1",
    "@codemirror/language": "^6.12.1",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.3",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.9",
    "@fontsource-variable/inconsolata": "^5.2.8",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@types/three": "^0.182.0",
    "antlr4ng": "^3.0.16",
    "codemirror": "^6.0.2",
    "i18next": "^25.7.4",
    "i18next-http-backend": "^3.0.2",
    "lit": "^3.3.2",
    "material-icons": "^1.13.14",
    "mathjs": "^15.1.0",
    "three": "^0.182.0"
  }
}
